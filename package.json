{
  "name": "@unitless-io/data-server",
  "version": "0.0.1",
  "description": "Backend application for the unitless.io software",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "nodemon src/dev.ts",
    "build": "tsc && babel ./src --out-dir ./dist --extensions \".ts\"",
    "test": "npx jest --passWithNoTests",
    "lint": "eslint src --ext ts --resolve-plugins-relative-to . && npm run prettier-check",
    "prettier": "prettier --ignore-path .eslintignore --write \"./**/*.ts\" \"./**/*.json\"",
    "prettier-check": "prettier --ignore-path .eslintignore --check \"./**/*.ts\" \"./**/*.json\"",
    "prepare": "npm run build"
  },
  "author": "unitless-io",
  "license": "Apache-2.0 license",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@tsconfig/node16": "^1.0.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.13",
    "@types/ramda": "^0.28.14",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@unitless-io/browser-app": "git+https://github.com/unitless-io/browser-app.git#develop",
    "@unitless-io/local-db": "git+https://github.com/unitless-io/local-db.git#develop",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^4.17.3",
    "morgan": "^1.10.0",
    "ramda": "^0.28.0"
  }
}
